<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <TextView
            android:text="Detalle del coche: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lblMensaje2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp" android:layout_marginStart="200dp" android:layout_marginEnd="200dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageCars"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="200dp" android:layout_marginEnd="200dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/lblMensaje2"/>
    <TextView
            android:text="Marca: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/lblMarca"
            app:layout_constraintTop_toTopOf="@+id/lblMarca" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp" android:layout_marginEnd="50dp"
    />
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lblMarca"
            app:layout_constraintStart_toStartOf="@+id/lblNombre"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/imageCars"
            app:layout_constraintEnd_toStartOf="@+id/lblNombre"/>
    <TextView
            android:text="Nombre: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lblNombre"
            app:layout_constraintStart_toStartOf="@+id/lblAño"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/lblMarca"
            app:layout_constraintEnd_toStartOf="@+id/lblAño"/>
    <TextView
            android:text="año:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lblAño"
            app:layout_constraintStart_toStartOf="@+id/lblColor"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/lblNombre"
            app:layout_constraintEnd_toStartOf="@+id/lblColor"/>
    <TextView
            android:text="Color: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lblColor"
            app:layout_constraintStart_toStartOf="@+id/lblMensaje2"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/lblAño"/>

</androidx.constraintlayout.widget.ConstraintLayout>